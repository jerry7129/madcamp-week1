<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 가게 등록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText android:id="@+id/etName" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="가게 이름" />
        <EditText android:id="@+id/etRegion" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="지역 (예: 서울)" />
        <EditText android:id="@+id/etLink" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="지도 링크" />
        <EditText android:id="@+id/etDesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="설명 (선택)" />
        <EditText android:id="@+id/etDialogLatitude" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="위도 (Latitude - 예: 37.5665)" android:inputType="numberDecimal|numberSigned" />
        <EditText android:id="@+id/etDialogLongtitude" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="경도 (Longitude - 예: 126.9780)" android:inputType="numberDecimal|numberSigned" />

    </LinearLayout>
</ScrollView>