<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 가게 등록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="가게 이름" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 사진 등록"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="갤러리에서 사진 선택"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/ivDialogPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#F0F0F0"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="지도 링크" />

        <EditText
            android:id="@+id/etDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="설명 (선택)" />

        <!-- 주소 입력란과 변환 버튼 추가 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="주소 입력 (예: 세종대로 110)" />
            <Button
                android:id="@+id/btnSearchAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색" />
        </LinearLayout>

        <EditText
            android:id="@+id/etDialogLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="위도 (Latitude)"
            android:inputType="numberDecimal|numberSigned" />

        <EditText
            android:id="@+id/etDialogLongtitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="경도 (Longitude)"
            android:inputType="numberDecimal|numberSigned" />



    </LinearLayout>
</ScrollView>